<?xml version="1.0"?>
<odoo>
    <record id="estate_model_offer_action" model="ir.actions.act_window">
        <field name="name">estate.property.offer.action</field>
        <field name="res_model">estate.property.offer</field>
        <field name="view_mode">list,form</field>
        <field name="domain">[('property_type_id', '=', active_id)]</field>
    </record>

    <record id="estate_model_offer_view_tree" model="ir.ui.view">
        <field name="name">estate.property.offer.list</field>
        <field name="model">estate.property.offer</field>
        <field name="arch" type="xml">
            <list
                    editable="bottom"
                    decoration-success="status == 'accepted'"
                    decoration-danger="status == 'refused'"
            >
                <field name="price" string="Price" />
                <field name="partner_id" string="Buyer" />
                <field name="status" string="Status" />
                <button name="action_property_offer_accept" string="" type="object" icon="fa-check" help="Accept this offer" invisible="status" />
                <button name="action_property_offer_refuse" string="" type="object" icon="fa-close" help="Refuse this offer" invisible="status" />
                <field name="validity" />
                <field name="date_deadline" />
            </list>
        </field>
    </record>

    <record id="estate_model_offer_form" model="ir.ui.view">
        <field name="name">estate.property.offer.form</field>
        <field name="model">estate.property.offer</field>
        <field name="arch" type="xml">
            <form string="Offer">
                <sheet>
                    <group>
                        <field name="price" string="Price" />
                        <field name="partner_id" string="Buyer" />
                        <field name="status" string="Status" />
                        <field name="validity" />
                        <field name="date_deadline" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>